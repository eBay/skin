{
    "name": "@ebay/skin",
    "description": "Skin - CSS modules that represent the brand eBay",
    "version": "13.2.0",
    "license": "MIT",
    "main": "./index.js",
    "maintainers": [
        "Ian McBurnie <ianmcburnie@hotmail.com>",
        "Andrew Gliga <agliga4@gmail.com>",
        "Austin P Gardner <gardneraustin@protonmail.com>"
    ],
    "homepage": "https://ebay.github.io/skin/",
    "repository": {
        "type": "git",
        "url": "https://github.com/eBay/skin"
    },
    "scripts": {
        "prepare": "husky install",
        "start": "npm run build && gulp server",
        "test": "npm run build:css",
        "prebuild": "npm run clean",
        "prepublishOnly": "node scripts/generate-imports gen",
        "postpublish": "node scripts/generate-imports clean",
        "build": "npm run build:css && npm run lint:js && npm run bundle && npm run build:site && npm run copy",
        "build:css": "npm run lint:less && gulp && npm run lint:css",
        "build:site": "npm run copy:svgToDocs && npm run jekyll:docs",
        "clean": "rimraf _cdn _site .cache .tmp .jekyll npm-debug.log.* .DS_Store",
        "jekyll:docs": "bundler exec jekyll build --incremental --config docs/_config.yml,docs/_config.localhost.yml",
        "bundle": "npm run bundle:js && npm run bundle:css",
        "bundle:js": "npm run transpile && webpack",
        "bundle:css": "npx lessc --clean-css ./docs/src/less/ds4.less ./docs/static/ds4/docs.min.css && npx lessc --clean-css ./docs/src/less/ds6.less ./docs/static/ds6/docs.min.css",
        "lint": "npm run lint:less && npm run lint:css && npm run lint:js",
        "lint:less": "stylelint docs/src/less src/less --config .stylelintrc-less",
        "lint:css": "stylelint dist --config .stylelintrc-css",
        "lint:js": "eslint 'docs/src/js/main.js' > lint.log && eslint 'src/less/**/stories/*.js' >> lint.log ",
        "format": "npx prettier --write .",
        "copy": "npm run copy:primitivesToDist && npm run copy:tokensToDist && npm run copy:mixinsToDist && npm run copy:svgToDist",
        "copy:primitivesToDist": "mkdirp dist/primitives && ncp src/less/primitives dist/primitives",
        "copy:tokensToDist": "mkdirp dist/tokens && ncp src/less/tokens dist/tokens",
        "copy:mixinsToDist": "mkdirp dist/mixins && ncp src/less/mixins dist/mixins",
        "copy:svgToDist": "mkdirp dist/svg && ncp src/svg dist/svg/ds4 && ncp src/svg dist/svg/ds6",
        "copy:svgToDocs": "ncp src/svg docs/static/common",
        "version": "node scripts/jekyll-config && npm run storybook:build && npm run build && git add -A dist docs",
        "transpile": "babel docs/src/js --out-dir docs/_babel",
        "snapshot": "npm run storybook:build && percy-storybook --widths=1280 --build_dir=docs/storybook",
        "storybook:copy-svg-icons": "node scripts/storybook/copy-svg-icons",
        "storybook:copy-custom-styles": "node scripts/storybook/copy-custom-styles",
        "storybook:build": "npm run storybook:copy-svg-icons && npm run storybook:copy-custom-styles && STORYBOOK_DS=4 build-storybook -o ./docs/ds4/storybook && STORYBOOK_DS=6 build-storybook -o ./docs/storybook",
        "storybook:start-proper": "start-storybook -s .",
        "storybook:start": "cross-env STORYBOOK_DS=6 npm-run-all -s storybook:copy-svg-icons storybook:copy-custom-styles storybook:start-proper"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@ebay/browserslist-config": "^2.0.2",
        "@percy/storybook": "^4",
        "@storybook/builder-webpack5": "^6.3.0-alpha.2",
        "@storybook/html": "^6.2.7",
        "@storybook/manager-webpack5": "^6.3.7",
        "babel-loader": "^8",
        "browser-sync": "^2.27.5",
        "btoa": "^1",
        "cross-env": "^7",
        "eslint": "^7.32.0",
        "eslint-config-ebay": "^1",
        "eslint-config-prettier": "^8",
        "eslint-plugin-prettier": "^3.3.1",
        "gulp": "^4",
        "gulp-banner": "~0.1.3",
        "gulp-clean-css": "^4",
        "gulp-flatten": "~0.4.0",
        "gulp-less": "^4",
        "gulp-rename": "^2",
        "husky": "^7.0.1",
        "jekyll": "^3.0.0-beta1",
        "jsdom": "^17.0.0",
        "less-loader": "^10.0.1",
        "less-plugin-autoprefix": "^2",
        "less-plugin-clean-css": "^1.5.1",
        "lint-staged": "^11.1.2",
        "makeup-active-descendant": "~0.4.0",
        "makeup-alert-dialog": "~0.1.0",
        "makeup-combobox": "~0.1.0",
        "makeup-confirm-dialog": "~0.1.0",
        "makeup-dialog": "~0.3.0",
        "makeup-dialog-button": "~0.2.0",
        "makeup-drawer-dialog": "0.0.1",
        "makeup-expander": "~0.9.0",
        "makeup-floating-label": "~0.2.1",
        "makeup-fullscreen-dialog": "0.0.1",
        "makeup-input-dialog": "0.0.1",
        "makeup-key-emitter": "~0.2.0",
        "makeup-lightbox-dialog": "0.0.1",
        "makeup-listbox": "~0.1.0",
        "makeup-listbox-button": "~0.2.0",
        "makeup-menu": "~0.1.1",
        "makeup-menu-button": "~0.1.1",
        "makeup-modal": "~0.3.0",
        "makeup-navigation-emitter": "~0.4.0",
        "makeup-panel-dialog": "0.0.1",
        "makeup-prevent-scroll-keys": "~0.1.1",
        "makeup-roving-tabindex": "~0.4.0",
        "makeup-snackbar-dialog": "0.0.2",
        "makeup-switch": "~0.1.0",
        "makeup-toast-dialog": "0.0.2",
        "mkdirp": "^1",
        "ncp": "^2",
        "npm-run-all": "^4",
        "percy": "~0.28.1",
        "postcss-loader": "^6.1.1",
        "prettier": "^2.3.2",
        "rimraf": "^3",
        "stylelint": "^13",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22",
        "stylelint-no-unsupported-browser-features": "^5.0.1",
        "stylelint-order": "^4",
        "stylelint-prettier": "^1.1.2",
        "svgo": "^2.4.0",
        "webpack": "^5.44.0",
        "webpack-cli": "^4.7.2",
        "winston": "^3",
        "yargs": "^17.1.0"
    },
    "keywords": [
        "eBay",
        "CSS",
        "BEM",
        "LassoJS",
        "accessibility",
        "WAI-ARIA",
        "eBay MIND Patterns"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "browserslist": [
        "extends @ebay/browserslist-config"
    ],
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "lint-staged": {
        "*.{js,css,md,less,json}": "prettier --write",
        "*.css": "stylelint --config .stylelintrc-css",
        "*.less": "stylelint --config .stylelintrc-less"
    }
}
