{
    "name": "@ebay/skin",
    "description": "Skin - CSS modules that represent the brand eBay",
    "version": "12.3.0-0",
    "license": "MIT",
    "main": "./index.js",
    "maintainers": [
        "Ian McBurnie <ianmcburnie@hotmail.com>",
        "Andrew Gliga <agliga4@gmail.com>",
        "Austin Gardner <gardneraustin@protonmail.com>"
    ],
    "homepage": "https://ebay.github.io/skin/",
    "repository": {
        "type": "git",
        "url": "https://github.com/eBay/skin"
    },
    "scripts": {
        "start": "npm run build && gulp server",
        "test": "npm run build:css",
        "prebuild": "npm run clean",
        "prepublishOnly": "node scripts/generate-imports gen",
        "postpublish": "node scripts/generate-imports clean",
        "build": "npm run build:css && npm run lint:js && npm run lasso:docs && npm run build:site && npm run copy",
        "build:css": "npm run lint:less && gulp && npm run lint:css",
        "build:site": "npm run jekyll:docs",
        "clean": "rimraf _cdn _site .cache .tmp .jekyll npm-debug.log.* .DS_Store",
        "jekyll:docs": "bundler exec jekyll build --incremental --config docs/_config.yml,docs/_config.localhost.yml",
        "lasso:docs": "npm run transpile && npm run lasso:ds4 && npm run lasso:ds6 && rimraf .cache docs.html.json build",
        "lasso:ds4": "lasso ./docs/ds4.browser.json --name docs.min --output-dir docs/static/ds4 --plugins lasso-less lasso-autoprefixer --minify && rimraf docs/static/ds4/docs.min.css.*",
        "lasso:ds6": "lasso ./docs/ds6.browser.json --name docs.min --output-dir docs/static/ds6 --plugins lasso-less lasso-autoprefixer --minify && rimraf docs/static/ds6/docs.min.css.*",
        "lint": "npm run lint:less && npm run lint:css && npm run lint:js",
        "lint:less": "stylelint docs/src/less src/less --config .stylelintrc-less",
        "lint:css": "stylelint dist --config .stylelintrc-css",
        "lint:js": "eslint 'docs/src/js/base/*.js' > lint.log && eslint 'src/less/**/stories/*.js' >> lint.log ",
        "format": "npx prettier --write .",
        "copy": "npm run copy:variablesToDist && npm run copy:mixinsToDist && npm run copy:svgToDist && npm run copy:svgToDocs",
        "copy:variablesToDist": "mkdirp dist/variables && ncp src/less/variables dist/variables",
        "copy:mixinsToDist": "mkdirp dist/mixins && ncp src/less/mixins dist/mixins",
        "copy:svgToDist": "mkdirp dist/svg && ncp src/svg dist/svg",
        "copy:svgToDocs": "ncp dist/svg docs/static",
        "version": "node scripts/jekyll-config && npm run storybook:build && npm run build && git add -A dist docs",
        "transpile": "babel docs/src/js --out-dir docs/_babel",
        "snapshot": "npm run storybook:build && percy-storybook --widths=320,1280 --build_dir=docs/storybook",
        "storybook:copy-svg-icons": "node scripts/storybook/copy-svg-icons",
        "storybook:copy-custom-styles": "node scripts/storybook/copy-custom-styles",
        "storybook:build": "npm run storybook:copy-svg-icons && npm run storybook:copy-custom-styles && STORYBOOK_DS=4 build-storybook -o ./docs/ds4/storybook && STORYBOOK_DS=6 build-storybook -o ./docs/storybook",
        "storybook:start-proper": "start-storybook -s .",
        "storybook:start": "cross-env STORYBOOK_DS=6 npm-run-all -s storybook:copy-svg-icons storybook:copy-custom-styles storybook:start-proper"
    },
    "devDependencies": {
        "@babel/cli": "^7",
        "@babel/core": "^7",
        "@babel/preset-env": "^7",
        "@commitlint/cli": "^12",
        "@commitlint/config-conventional": "^12",
        "@ebay/browserslist-config": "^1",
        "@percy/storybook": "^3",
        "@storybook/html": "^6",
        "babel-loader": "^8",
        "babel-plugin-transform-object-assign": "^6",
        "browser-sync": "^2",
        "btoa": "^1",
        "core-js-pure": "^3",
        "cross-env": "^7",
        "details-element-polyfill": "^2",
        "eslint": "^7",
        "eslint-config-ebay": "^1",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "gulp": "^4",
        "gulp-banner": "~0.1.3",
        "gulp-flatten": "~0.4.0",
        "gulp-less": "^4",
        "gulp-rename": "^2",
        "husky": "^4.3.8",
        "jekyll": "^3.0.0-beta1",
        "jsdom": "^16",
        "lasso": "^3",
        "lasso-autoprefixer": "^4",
        "lasso-cli": "^2",
        "lasso-less": "^3",
        "less-loader": "^7",
        "less-plugin-autoprefix": "^2",
        "less-plugin-clean-css": "^1",
        "lint-staged": "^10.5.3",
        "makeup-active-descendant": "~0.3.9",
        "makeup-expander": "~0.8.5",
        "makeup-floating-label": "~0.1.2",
        "makeup-key-emitter": "~0.1.3",
        "makeup-modal": "~0.2.0",
        "makeup-navigation-emitter": "~0.3.8",
        "makeup-prevent-scroll-keys": "~0.0.4",
        "makeup-roving-tabindex": "~0.3.7",
        "makeup-switch-class": "~0.0.4",
        "mkdirp": "^1",
        "ncp": "^2",
        "nodelist-foreach-polyfill": "^1",
        "npm-run-all": "^4",
        "percy": "~0.28.1",
        "postcss-loader": "^4.0.3",
        "prettier": "2.2.1",
        "rimraf": "^3",
        "stylelint": "^13",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20",
        "stylelint-no-unsupported-browser-features": "^4",
        "stylelint-order": "^4",
        "stylelint-prettier": "^1.1.2",
        "svgo": "^1",
        "winston": "^3",
        "yargs": "^16"
    },
    "keywords": [
        "eBay",
        "CSS",
        "BEM",
        "LassoJS",
        "accessibility",
        "WAI-ARIA",
        "eBay MIND Patterns"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "browserslist": [
        "extends @ebay/browserslist-config"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "lint-staged": {
        "*.{js,css,md,less,json}": "prettier --write",
        "*.css": "stylelint --config .stylelintrc-css",
        "*.less": "stylelint --config .stylelintrc-less"
    }
}
